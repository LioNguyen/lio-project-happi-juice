    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "plop": "^4.0.1",
    "postcss": "^8.5.1",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.20.0",
    "vite": "^5.1.6",
    "vitest": "^1.4.0"
  },
  "lint-staged": {
    "*/**.{ts,tsx}": [
      "eslint"
